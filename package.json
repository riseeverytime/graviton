{
  "name": "graviton",
  "version": "2.0.29",
  "description": "Minimalist looking code editor.",
  "repository": "https://github.com/Graviton-Code-Editor/Graviton-App",
  "homepage": "https://graviton.ml",
  "author": "Marc Esp√≠n Sanz <mespinsanz@gmail.com>",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "test": "run-p watch:parcel test:spectron ",
    "test:spectron": "mocha test --delay",
    "start": " run-p watch:parcel watch:electron ",
    "watch:parcel": "parcel serve src/index.html --target browser --port 4321 --bundle-node-modules --out-dir dist_parcel",
    "watch:electron": "electron main.js Graviton --no-sandbox",
    "build": "npm run build:parcel && npm run build:electron",
    "build:electron": "npx electron-builder build -c.extraMetadata.name=Graviton",
    "build:parcel": "parcel build src/index.html --target browser --bundle-node-modules --out-dir dist_parcel --public-url ./"
  },
  "staticFiles": {
    "staticPath": "assets",
    "watcherGlob": "**"
  },
  "alias": {
    "ThemeProvider": "./src/javascript/utils/themeprovider.js",
    "StaticConfig": "./src/javascript/utils/static.config.js",
    "RunningConfig": "./src/javascript/utils/running.config.js",
    "ExtensionsRegistry": "./src/javascript/utils/extensions.registry.js",
    "LanguageConfig": "./src/javascript/utils/lang.config.js"
  },
  "dependencies": {
    "@mkenzo_8/puffin": "^0.4.2",
    "@mkenzo_8/puffin-drac": "0.0.12",
    "appdata-path": "^1.0.0",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "codemirror": "^5.51.0",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^5.1.0",
    "electron-window-state": "^5.0.3",
    "fs-extra": "^8.1.0",
    "shortcuts": "^1.2.0",
    "simple-git": "^1.131.0",
    "trash": "^6.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "electron": "^8.0.0",
    "electron-builder": "^22.2.0",
    "mocha": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "sass": "^1.25.0",
    "spectron": "^10.0.1"
  },
  "build": {
    "appId": "graviton-editor",
    "artifactName": "${name}-${version}-${arch}-${platform}.${ext}",
    "icon": "assets/building/mac/icon.png",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "icon": "assets/building/linux"
    },
    "linux": {
      "category": "Development",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ]
    }
  }
}
