{
  "name": "Graviton",
  "version": "0.7.3",
  "description": "Graviton is a simple code editor.",
  "main": "main.js",
  "scripts": {
    "start": "electron . GravitonEditor ",
    "pack": "build --dir",
    "dist": "build"
  },
  "author": "Marc Esp√≠n <mespinsanz@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "appdata-path": "^1.0.0",
    "download-file": "^0.1.5",
    "fs": "0.0.1-security",
    "fs-extra": "^7.0.1",
    "jquery": "^3.3.1",
    "mkdirp": "^0.5.1",
    "npm": "^6.8.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "electron": "^4.0.5",
    "electron-builder": "^20.39.0",
    "fs": "0.0.1-security"
  },
  "build": {
    "appId": "graviton-editor",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    },
    "fileAssociations": [
      {
        "ext": "grv",
        "name": "Graviton Package File",
        "role": "Editor"
      }
    ]
  }
}
