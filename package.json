{
  "name": "Graviton",
  "version": "1.0.3",
  "description": "Graviton is a simple code editor.",
  "main": "main.js",
  "repository": "https://github.com/Graviton-Code-Editor/Graviton-App",
  "scripts": {
    "start": "electron . GravitonEditor ",
    "pack": "build --dir",
    "build": "build",
    "build:snap": "build --linux snap",
    "build:win": "build --win x64",
    "build:win32": "build --win --ia32",
    "build:win:linux": "build --linux && build --win && build --win --ia32",
    "rebuild": "electron-rebuild -f -w node-pty && electron-rebuild -f -w nodegit",
    "standard": "standard --fix"
  },
  "standard": {
    "ignore": [
      "/node_modules",
      "/build",
      "/dist",
      "/languages",
      "/plugins",
      "/themes",
      "/src/lib",
      "/src/mode",
      "/src/addons"
    ]
  },
  "keywords": [
    "Graviton",
    "Editor",
    "code",
    "open source",
    "modern"
  ],
  "author": "Marc Esp√≠n Sanz <mespinsanz@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "appdata-path": "^1.0.0",
    "fs-extra": "^7.0.1",
    "jquery": "^3.4.1",
    "lodash": "^4.17.13",
    "marked": "^0.6.3",
    "node-pty": "^0.8.1",
    "nodegit": "^0.24.3",
    "npm": "^6.10.0",
    "octonode": "^0.9.5",
    "request": "^2.88.0",
    "rimraf": "^2.6.3",
    "standard": "^12.0.1",
    "xterm": "^3.14.5"
  },
  "devDependencies": {
    "electron": "^4.2.4",
    "electron-builder": "^20.44.4",
    "electron-rebuild": "^1.8.5"
  },
  "build": {
    "appId": "graviton-editor",
    "artifactName": "${name}-${version}-${arch}-${platform}.${ext}",
    "icon": "build/mac/icon.png",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/linux"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/win/icon.ico"
    }
  }
}
